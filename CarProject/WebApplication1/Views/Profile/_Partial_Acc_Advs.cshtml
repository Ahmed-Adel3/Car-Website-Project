@using WebApplication1.Models
@if (ViewBag.caradv != null)
{
    foreach (var item in ViewBag.accadv)
    {


    <div class="col-sm-6 col-xs-12">
        <figure class="wow fadeInLeft animated portfolio-item" data-wow-duration="500ms" data-wow-delay="0ms">
            <div class="img-wrapper">

                <img src="@item.Aphoto" class="img-responsive Recent-Car-resize" alt="this is a title" style="height: 249px; margin-left: 42px;">

                <div class="overlay">
                    <div class="buttons">
                        @if (item.state == status.sold)
                        {
                            <a href="@Url.Action("RepublishAcc", "Profile", routeValues: new { id = item.AccId})">
                                Republish
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("SoldAcc", "Profile", routeValues: new { id = item.AccId})">
                                Mark As Sold
                            </a>
                            @*<a href="@Url.Action("accDetails", "AccessoriesSearch", routeValues: new { id = item.AccId })">
                                Details
                            </a>*@
                        }
                    </div>
                </div>
            </div>
            
            <figcaption>
                <h4>
                        @item.Accessory.AccTypeName
                </h4>
                <p>
                    <strong>Price</strong>  @item.Price EGP
                </p>
            </figcaption>
        </figure>
    </div>

    }
}

