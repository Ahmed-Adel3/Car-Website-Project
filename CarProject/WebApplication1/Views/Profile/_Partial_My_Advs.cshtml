
@using WebApplication1.Models

@section header_css{
<link href="~/Content/bootstrap.css" rel="stylesheet" />

    }

@if(ViewBag.caradv != null)
{
    foreach (var item in ViewBag.caradv)
    {
    <div class="col-sm-6 col-xs-12">
        <figure class="wow fadeInLeft animated portfolio-item" data-wow-duration="500ms" data-wow-delay="0ms">
            <div class="img-wrapper">
                <img src="@item.Manufacturer.LogoImage" class="img-responsive Recent-Car-resize" alt="this is a title">

                 <div class="overlay">
                    <div class="buttons">
                       @if (item.state == status.sold)
                       {
                        <a href="@Url.Action("RepublishCar", "Profile", routeValues: new { id = item.Aid })">
                            Republish
                        </a>
                       }
                       else
                       { 
                        <a href="@Url.Action("SoldCar", "Profile", routeValues: new { id = item.Aid })">
                            Mark As Sold
                        </a>
                        <a href="@Url.Action("carDetails", "CarSearch", routeValues: new { id = item.Aid })">
                            Details
                        </a>
                       }


                    </div>
                </div>
            </div>
            <figcaption>
                <h4>
                    <a href="#">
                        @item.Manufacturer.Name : @item.CarModel.ModelName
                    </a>
                </h4>
                <p>
                    <strong>Price</strong>  @item.Price EGP
                </p>
            </figcaption>
        </figure>
    </div>

    }
}




