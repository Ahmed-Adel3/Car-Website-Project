<section class="moduler wrapper_404" style="padding:100px 0px 20px 0px;background:url('../images/slider.jpg') no-repeat 50%;">
    <div class="container">
        <h2 style="font-family:Algerian;color:white;">Branches Search :</h2><br />


        @using (Ajax.BeginForm("Search", "Branches", new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "searchdiv"

        }, new { @class = "form-horizontal" }))
        {

            <div class="form-group">
                @Html.Label("Manufactuer", new { @class = "col-xs-3 control_label", style = "color:white" })
                <div class="col-xs-6">
                    @Html.DropDownListFor(a => a.Mid, ViewBag.sel as SelectList, "Select Manufactuer", new { @class = "col-xs-3 form-control" })

                </div>
            </div>




            <div class="form-group">
                @Html.Label("Governorate", new { @class = "col-xs-3 control_label", style = "color:white" })
                <div class="col-xs-6">
                    @Html.DropDownListFor(a => a.Gid, ViewBag.sel1 as SelectList, "Select Governrate", new { @class = "col-xs-3 form-control" })

                </div>
            </div>
            <div class="form-group ">
                <div class="col-lg-11">
                    <br /><span class="glyphicon glyphicon-search"></span>
                    <input type="submit" value="Search" class="btn col-lg-10" style="background-color:#ffc500;" />

                </div>

            </div>


        }


    </div>


</section>

