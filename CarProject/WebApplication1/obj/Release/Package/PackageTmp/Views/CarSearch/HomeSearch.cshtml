
@model  IQueryable<WebApplication1.Models.CarAdv>
@{
    if (Model.Count() != 0)
    {
        ViewBag.Title = Model.FirstOrDefault().Manufacturer.Name + " Cars";
    }
    else { ViewBag.Title = "Wrong Direction"; }
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@if (Model.Count() != 0)
{
    <section class="moduler wrapper_404" style="background-color:#e4e5e9;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        <div class="col-md-12">
                            <h2 class="wow fadeInUp animated" data-wow-delay=".6s">@Model.FirstOrDefault().Manufacturer.Name Cars : </h2>
                            <br /><br />
                        </div>
                       
                        <br /><br />
                        @foreach (var item in Model)
                        {
                            <br /><br />    <div class="col-sm-4 col-xs-12">
                                <figure class="wow fadeInLeft animated portfolio-item" data-wow-duration="500ms" data-wow-delay="0ms">
                                    <div class="img-wrapper">

                                        <img src="~/images/car_logos_2/(@item.Mid).png" class="img-responsive Recent-Car-resize" alt="this is a title">
                                        <div class="overlay">
                                            <div class="buttons">
                                                <a rel="gallery" class="fancybox" href="~/images/car_logos_2/(@item.Mid).png">Zoom</a>

                                                @Html.ActionLink("Details", "carDetails", "CarSearch", new { id = @item.Aid }, new { @class = "btn btn-primary" })
                                            </div>
                                        </div>
                                    </div>
                                    <figcaption>
                                        <h4>
                                            <a href="~/CarSearch/carDetails/@item.Aid">
                                                @item.Manufacturer.Name | @item.CarModel.ModelName
                                            </a>
                                        </h4>
                                        <p>
                                            @item.Price EGP
                                        </p>
                                    </figcaption>
                                </figure>
                            </div>
                        }
                      <br />  <div class="col-md-12">

                            <a href="@Url.Action("CarIndex", "CarSearch")" class="btn btn-dafault btn-home wow fadeInUp animated" data-wow-delay="1.1s">More Detailed Search</a>

                        </div>
                    </div>
                </div>     
             </div>
          </div>
     </section>
        
}

else
{ <section class="moduler wrapper_404">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="text-center">
                                    <h1 class="wow fadeInUp animated cd-headline slide" data-wow-delay=".4s">Wrong Direction</h1>
                                    <h2 class="wow fadeInUp animated" data-wow-delay=".6s">Opps! You have some problems</h2>
                                    <p class="wow fadeInUp animated" data-wow-delay=".9s">The page you are looking for was moved, removed, renamed or might never existed.</p>
                                    <a href="@Url.Action("CarIndex", "CarSearch")" class="btn btn-dafault btn-home wow fadeInUp animated" data-wow-delay="1.1s">Go To Search Page</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                }

