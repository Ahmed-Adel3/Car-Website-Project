@model IEnumerable<WebApplication1.Models.AccessoriesAdv>

@{
    ViewBag.Title = "Accessory Adverts";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <div class="col-md-10">
        <div class="mainbody" style="overflow-x:auto">
            <table class="table table-condensed table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Manufacturer.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Accessory.AccTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aphoto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdDate)
                    </th>
                    <th>Operation</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Manufacturer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Accessory.AccTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aphoto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.AccId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.AccId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.AccId })
                        </td>
                    </tr>
                }

            </table>
            </div>
</div>
</div>