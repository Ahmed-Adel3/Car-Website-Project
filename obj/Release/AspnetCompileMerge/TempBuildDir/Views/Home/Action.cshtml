                    <div class="contact-form" style="text-align:center">
                        @using (Html.BeginForm("Action", "Home", FormMethod.Post, new { @class = "contact-forms", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                                        @Html.ValidationSummary()

                                        <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".6s">
                                @Html.TextBoxFor(a => a.Name, new { @class = "form-control", placeholder = "Name", id = "name" })
                            </div>

                            <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".8s">                               
                                @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Email", id = "email" })
                                <label style="color:coral;">  @Html.ValidationMessageFor(a => a.Email)</label>
                            </div>

                            <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1s">
                                @Html.TextBoxFor(a => a.Subject, new { @class = "form-control", placeholder = "Subject", id = "subject" })
                                <label style="color:coral;">  @Html.ValidationMessageFor(a => a.Subject)</label>
                            </div>

                            <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1.2s">
                                @Html.TextAreaFor(a => a.Message, new { @class = "form-control", placeholder = "Message", id = "message", rows = "6" })
                                <label style="color:coral;">  @Html.ValidationMessageFor(a => a.Message)</label>
                            </div>

                            <div id="submit" class="wow fadeInDown" data-wow-duration="500ms" data-wow-delay="1.4s">
                                <input type="submit" id="contact-submit" class="btn btn-default btn-send" value="Send Message" style="background-color:#ffc600;"><br /><br />
                            </div>
                        }
                        @*</form>*@
                    </div>
                </div>
