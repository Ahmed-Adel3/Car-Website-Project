@model IEnumerable<WebApplication1.Models.JobAdv>
@{
    ViewBag.Title = "Pending_JobAds";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<h2>Pending JobAds</h2>

<div class="container">
    <div class="col-md-10">
        <div class="mainbody" style="overflow-x:auto">
            <table class="table table-condensed table-bordered table-hover">
                <tr>
                    <th>
                        UserName
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        Governrate
                    </th>
                    <th>
                        TechJob
                    </th>
                    <th>
                        WorkShopName
                    </th>
                    <th>
                        WorkShopPhone
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        AdDate
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City.CityName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Governrate.Gname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TechJob.Jname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkShopName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkShopPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdDate)
                        </td>
                        <td>
                            @Html.ActionLink("Publish", "Publish", new { id = item.JAid }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.JAid })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

